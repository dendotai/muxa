{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    },
    "lib": ["es2022", "dom", "dom.iterable"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src/**/*", "*.config.ts", "*.config.js"],
  "exclude": ["node_modules", "dist", ".next", ".turbo"]
}
